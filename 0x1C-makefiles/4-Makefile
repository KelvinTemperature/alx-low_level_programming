CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school
RM := rm -f
CFLAG = -Wall -Werror -Wextra -pedantic

all: ${NAME} clean oclean fclean re

${NAME}: ${OBJ}
	${CC} ${CFLAG} ${OBJ} -o ${NAME}

%.o: %.c
	${CC} ${CFLAG} -c $< -o $@

clean:
	${RM} *~ ${NAME}

oclean:
	${RM} ${OBJ}

fclean:
	${RM} *~ ${NAME} ${OBJ}

re:
	${RM} ${OBJ} ${OBJ}
